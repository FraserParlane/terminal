{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "powerline",
                    "foreground": "#000000",
                    "background": "blue",
                    "template": " {{ .HostName }} "
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#000000",
                    "background": "green"
                }
            ]
        },
        {
            "type": "prompt",
            "style": "powerline",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "powerline",
                    "foreground": "yellow",
                    "trailing_diamond": "a",
                    "template": " {{ .Location }}"
                }
            ]
        }
    ],
    "transient_prompt": {
        "background": "transparent",
        "foreground": "red",
        "template": "‚ùØ "
    }
}