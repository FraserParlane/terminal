{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 2,
    "palette": {
        "system": "blue",
        "git": "green",
        "minor": "#303030"
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "overflow": "hide",
            "segments": [
                {
                    "style": "diamond",
                    "type": "session",
                    "foreground": "black",
                    "background": "p:system",
                    "template": " {{ .HostName }} "
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "trailing_diamond": "\ue0b8",
                    "foreground": "black",
                    "background": "p:git",
                    "template": "{{ if .IsWorkTree  }} {{ else }} {{ .RepoName }} {{ .HEAD }} {{  end  }}"

                },
                {
                    "type": "path",
                    "style": "diamond",
                    "foreground": "white",
                    "background": "p:minor",
                    "trailing_diamond": "\ue0b8",
                    "template": " {{ .Location }} "

                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "overflow": "hide",
            "segments": [
                {
                    "type": "time",
                    "style": "diamond",
                    "leading_diamond": "\uE0BA",
                    "foreground": "white",
                    "background": "p:minor"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "overflow": "hide",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "powerline",
                    "foreground": "blue",
                    "template": "->>"
                }   
            ]
        }
    ],
    "transient_prompt": {
        "background": "transparent",
        "foreground": "blue",
        "template": "->> "
    }
}