{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 2,
    "profiles": {"defaults": {"font": {"face": "FiraMono"}}},
    "palette": {
        "system": "blue",
        "git": "green",
        "minor": "#303030",
        "greentext": "#2e3312",
        "bluetext": "#173140",
        "purple": "#c387ff",
        "purpletext": "#312240"
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "overflow": "hide",
            "segments": [
                {
                    "template": "{{.Icon}}",
                    "type": "os",
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "foreground": "p:purpletext",
                    "background": "p:purple"
                },
                {
                    "type": "time",
                    "style": "diamond",
                    "trailing_diamond": "\ue0bc",
                    "foreground": "p:purpletext",
                    "background": "p:purple"
                },
                {
                    "type": "session",
                    "style": "diamond",
                    "trailing_diamond": "\ue0bc",
                    "foreground": "p:bluetext",
                    "background": "blue",
                    "template": " {{ .HostName }} "
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "trailing_diamond": "\ue0bc",
                    "foreground": "p:greentext",
                    "background": "p:git",
                    "template": "{{ if .IsWorkTree  }} {{ else }} {{ .RepoName }} {{ .HEAD }} {{  end  }}"
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "foreground": "white",
                    "background": "p:minor",
                    "trailing_diamond": "\ue0bc",
                    "template": " {{ .Location }} "
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "overflow": "hide",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "powerline",
                    "foreground": "blue",
                    "template": "->>"
                }
            ]
        }
    ]
}
