{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "diamond",
                    "foreground": "black",
                    "background": "blue",
                    "template": " {{ .HostName }} "
                },
                {
                    "type": "text",
                    "style": "powerline",
                    "foreground": "blue",
                    "template": "\u0020\u0020"
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "trailing_diamond": "\ue0b8",
                    "foreground": "black",
                    "background": "green",
                    "template": "{{ if .IsWorkTree  }} {{ else }} {{ .RepoName }} {{ .HEAD }} {{  end  }}"

                },
                {
                    "type": "path",
                    "style": "powerline",
                    "foreground": "white",
                    "trailing_diamond": "a",
                    "template": " {{ .Location }}"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "time",
                    "style": "diamond",
                    "leading_diamond": "\uE0BA",
                    "foreground": "black",
                    "background": "blue"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "powerline",
                    "foreground": "blue",
                    "template": "->>"
                }   
            ]
        }
    ],
    "transient_prompt": {
        "background": "transparent",
        "foreground": "blue",
        "template": "->> "
    }
}